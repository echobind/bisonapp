{
  "name": "create-bison-app",
  "version": "1.7.4",
  "description": "Creates a production-ready full-stack JAMstack app",
  "license": "MIT",
  "repository": "echobind/bisonapp",
  "author": {
    "name": "Chris Ball",
    "email": "chris@echobind.com",
    "url": "https://echobind.com"
  },
  "bin": "cli.js",
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "semantic-release": "semantic-release",
    "test:e2e": "start-server-and-test 'node ./scripts/createAppAndStartServer foo --acceptDefaults' 3001 'cypress run --spec cypress/integration/createBisonAppWithDefaults.test.js'",
    "test:unit": "yarn jest"
  },
  "files": [
    "logo.js",
    "index.js",
    "cli.js",
    "template",
    "utils",
    "tasks",
    "postInstallText.ejs"
  ],
  "keywords": [
    "bison",
    "jamstack",
    "template",
    "boilerplate"
  ],
  "dependencies": {
    "cpy": "^7.2.0",
    "ejs": "^3.1.5",
    "execa": "^4.0.3",
    "inquirer": "^7.3.3",
    "listr": "^0.14.3",
    "nodegit": "^0.27.0",
    "slugify": "^1.3.4",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@actions/core": "1.2.6",
    "@semantic-release/git": "^9.0.0",
    "cypress": "^5.1.0",
    "ejs-lint": "^1.1.0",
    "jest": "^26.4.2",
    "prettier": "^2.0.5",
    "semantic-release": "^17.1.1",
    "start-server-and-test": "^1.11.3"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "canary",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ]
        }
      ],
      "@semantic-release/github"
    ]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "node_modules",
      "cypress",
      "template"
    ]
  }
}
