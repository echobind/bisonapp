{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@prisma",
      "**/@prisma/**"
    ]
  },
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "publish:canary": "release-it --preRelease=canary --increment=preminor --dry-run",
    "publish:latest": "release-it --increment=minor --dry-run"
  },
  "devDependencies": {
    "release-it": "^14.11.6",
    "release-it-yarn-workspaces": "^2.0.1"
  },
  "release-it": {
    "github": {
      "release": true
    },
    "plugins": {
      "release-it-yarn-workspaces": true
    }
  }
}
